---
import newsItems from "../data/newsItems";

// Get the most recent news items (limit to 3)
const recentNews = [...newsItems]
  .sort((a, b) => b.date.getTime() - a.date.getTime())
  .slice(0, 3);
---

<section class="py-16 md:py-24 px-6 bg-base-100">
  <div class="max-w-6xl mx-auto">
    <div class="text-center mb-16">
      <h2 class="text-3xl md:text-4xl lg:text-5xl font-bold mb-4">
        In the News
      </h2>
      <div
        class="w-24 h-1 bg-gradient-to-r from-primary to-secondary mx-auto mb-4"
      >
      </div>
      <p class="text-lg text-base-content/70 max-w-2xl mx-auto">
        Recent media mentions and coverage
      </p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
      {
        recentNews.map((newsItem) => (
          <div class="card bg-base-100 shadow-lg hover:shadow-xl transition-all duration-300 border border-base-300 hover:-translate-y-1">
            <div class="card-body p-6">
              <div class="flex items-center gap-2 mb-2">
                <time class="badge badge-sm badge-primary">
                  {newsItem.date.toLocaleDateString("en-US", {
                    year: "numeric",
                    month: "short",
                  })}
                </time>
                <span class="badge badge-sm badge-outline">
                  {newsItem.publication}
                </span>
              </div>
              <h3 class="text-lg font-bold mb-3 line-clamp-2">
                <a
                  href={newsItem.url}
                  target="_blank"
                  rel="noopener noreferrer"
                  class="hover:text-primary transition-colors"
                >
                  {newsItem.title}
                </a>
              </h3>
              <p class="text-base-content/70 text-sm line-clamp-3 mb-4">
                {newsItem.description}
              </p>
              <div class="card-actions justify-end mt-auto">
                <a
                  href={newsItem.url}
                  target="_blank"
                  rel="noopener noreferrer"
                  class="btn btn-sm btn-outline btn-primary"
                >
                  Read More
                </a>
              </div>
            </div>
          </div>
        ))
      }
    </div>
    <div class="flex justify-center mt-10">
      <a href="/news" class="btn btn-primary"> View All Media Coverage </a>
    </div>
  </div>
</section>
